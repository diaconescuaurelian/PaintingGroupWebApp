@using PaintingGroupWebApp.ViewModels
@model EditUserDashboardViewModel


<form method="post" asp-action="EditUserProfile" enctype="multipart/form-data">
    <input type="hidden" id="Id" name="Id" asp-for="Id" />
    <div class="form-group">
        <label asp-for="FavouriteStyle">FavouriteStyle</label>
        <input asp-for="FavouriteStyle" class="form-control" placeholder="FavouriteStyle">
        <span asp-validation-for="FavouriteStyle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FavouriteMedium">FavouriteMedium</label>
        <input asp-for="FavouriteMedium" class="form-control" placeholder="FavouriteMedium">
        <span asp-validation-for="FavouriteMedium" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" placeholder="City">
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="County">County</label>
        <input asp-for="County" class="form-control" placeholder="County">
        <span asp-validation-for="County" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Profile Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
